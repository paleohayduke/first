//This program uses type cast to avoid integer division
#include <iostream>
using namespace std;

int main()
{
	int books;			// Number of books to read
	int months;			// Number of months spent reading
	double perMonth;	// Average number of books per month

	cout << "How many books do you plan to read?\n";
	cin >> books;
	cout << "How many months will it take you to read them?\n";
	cin >> months;
	perMonth = static_cast<double>(books) / months;
	cout << "That is " << perMonth << " books per month.\n";
	system("pause");
	return 0;
}
